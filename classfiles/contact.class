      $doc=array('contactid'=>$this->id,'name'=>$this->name,'email'=>$this->email,'phone'=>$this->phone,
	 			'subject'=>$this->subject, 'message'=>$this->message, 'entrydate'=>new MongoDate());

	  $temp=$cxn->insert($doc);
	  $this->id;
    }

          
    return $this->id;
  }
  }
